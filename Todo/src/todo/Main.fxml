<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="todo.MainController">
    <children>
      <HBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
         <children>
            <ListView fx:id="menuList" onMouseClicked="#selectMenuList" onMouseMoved="#toolTipList" opacity="0.8" prefHeight="200.0" prefWidth="250.0" />
            <VBox prefHeight="649.0" prefWidth="865.0" spacing="15.0">
               <children>
                  <VBox prefHeight="686.0" prefWidth="866.0" spacing="15.0">
                     <children>
                        <HBox spacing="15.0">
                           <children>
                              <TextField fx:id="description" onAction="#insertTextField" prefHeight="26.0" prefWidth="504.0" promptText="Add todo task">
                                 <tooltip>
                                    <Tooltip text="Add a new ToDo task" />
                                 </tooltip></TextField>
                              <DatePicker fx:id="datePicker" onAction="#handleDatePicker" promptText="Pick a date">
                                 <tooltip>
                                    <Tooltip text="Due date of the Todo task" />
                                 </tooltip></DatePicker>
                           </children>
                        </HBox>
                        <HBox prefHeight="42.0" prefWidth="866.0" spacing="15.0">
                           <children>
                                <Button fx:id="buttonHelp" mnemonicParsing="false" onAction="#handleButtonHelpAction" text="Help">
                                    <tooltip>
                                    <Tooltip text="Shows help pdf" wrapText="true" />
                                 </tooltip></Button>

                              <Button fx:id="buttonDeleteAll" onAction="#handleButtonDeleteAllAction" text="Clear List">
                                 <tooltip>
                                    <Tooltip text="Delete all Todo tasks" wrapText="true" />
                                 </tooltip></Button>
                           </children>
                        </HBox>
                        <TableView fx:id="activeItemsTable" onMouseClicked="#selectTableItem" opacity="0.8" prefHeight="560.0" prefWidth="735.0" >
                          <columns>

                            <TableColumn fx:id="activeItemsTableColId" minWidth="40.0" prefWidth="40.0" text="ID"  visible="false" />
                            <TableColumn fx:id="activeItemsTableColDesc" minWidth="200.0" onEditCommit="#handleDescriptionEdit" prefWidth="400.0" text="Description" />
                              <TableColumn fx:id="activeItemsTableColDate" maxWidth="95.0" minWidth="95.0" prefWidth="95.0" text="Due Date" />
                              <TableColumn fx:id="activeItemsTableColStat" maxWidth="30.0" minWidth="30.0" prefWidth="30.0" />
                              <TableColumn fx:id="activeItemsTableColStar" maxWidth="30.0" minWidth="30.0" prefWidth="30.0" />
                              <TableColumn fx:id="activeItemsTableColAlarm" maxWidth="30.0" minWidth="30.0" prefWidth="30.0" />
                              <TableColumn fx:id="activeItemsTableColRank" maxWidth="30.0" minWidth="30.0" prefWidth="30.0"  visible="false"/>

                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <Button fx:id="buttonShowOptions" mnemonicParsing="false" onAction="#handleButtonShowOptions" text="Show Done">
                           <tooltip>
                              <Tooltip text="Show completed ToDo tasks" wrapText="true" />
                           </tooltip>
                        </Button>
                        <TableView fx:id="doneItemsTable" onMouseClicked="#selectDoneTableItem" opacity="0.8" prefHeight="560.0" prefWidth="735.0">
                          <columns>
                            <TableColumn fx:id="doneItemsTableColId" minWidth="40.0" prefWidth="40.0" text="ID" visible="false" />
                            <TableColumn fx:id="doneItemsTableColDesc" minWidth="200.0" onEditCommit="#handleDescriptionEdit" prefWidth="400.0" text="Description" />
                              <TableColumn fx:id="doneItemsTableColDate" maxWidth="95.0" minWidth="95.0" prefWidth="95.0" text="Due Date" />
                              <TableColumn fx:id="doneItemsTableColStat" maxWidth="30.0" minWidth="30.0" prefWidth="30.0" />
                              <TableColumn fx:id="doneItemsTableColStar" maxWidth="30.0" minWidth="30.0" prefWidth="30.0" visible="false"/>
                              <TableColumn fx:id="doneItemsTableColRank" maxWidth="30.0" minWidth="30.0" prefWidth="30.0"  visible="false"/>
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>                        
                        <TilePane fx:id="PaneEditItem" visible="false">
                           <children>
                              <Label fx:id="Descriptionlabel" text="Description" textFill="WHITE" />
                              <TextField fx:id="descriptionEdit" />
                              <Label fx:id="Statuslabel" text="Status" textFill="WHITE" />
                              <TextField fx:id="StatusEdit" />
                              <Label fx:id="Duedatelabel" text="Due Date" textFill="WHITE" />
                              <DatePicker fx:id="datePickerEdit" />
                           </children>
                        </TilePane>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
    </children>
</AnchorPane>
