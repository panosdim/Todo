<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="783.0" prefWidth="913.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="todo.MainController">
    <children>
      <VBox layoutY="31.0" spacing="10.0" AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="24.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <TextField fx:id="description" onAction="#insertTextField" prefHeight="26.0" prefWidth="604.0" promptText="Add todo task" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="buttonDeleteAll" onAction="#handleButtonDeleteAllAction" text="Clear List" />
               </children>
            </HBox>
            <TableView fx:id="tblitems" prefHeight="200.0" prefWidth="453.0">
              <columns>
                <TableColumn prefWidth="75.0" text="ID" />
                <TableColumn prefWidth="75.0" text="Description" />
                  <TableColumn prefWidth="75.0" text="Date" />
                  <TableColumn prefWidth="75.0" text="Status" />
              </columns>
            </TableView>
         </children>
      </VBox>
      <TitledPane animated="false" layoutX="28.0" layoutY="509.0" text="completed items">
         <content>
            <ListView fx:id="myDoneList" onMouseClicked="#selectDoneListItem" prefHeight="205.0" prefWidth="855.0" />
         </content>
      </TitledPane>
      <TitledPane animated="false" layoutX="28.0" layoutY="121.0" text="pending items">
         <content>
            <ListView fx:id="myActiveList" onMouseClicked="#selectActiveListItem" prefHeight="302.0" prefWidth="855.0" />
         </content>
      </TitledPane>
    </children>
</AnchorPane>
