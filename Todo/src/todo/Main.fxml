<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="todo.MainController">
    <children>
      <HBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
         <children>
            <ListView fx:id="menuList" onMouseClicked="#selectMenuList" opacity="0.8" prefHeight="200.0" prefWidth="250.0" />
            <VBox prefHeight="649.0" prefWidth="865.0" spacing="15.0">
               <children>
                  <VBox prefHeight="686.0" prefWidth="866.0" spacing="15.0">
                     <children>
                        <HBox spacing="15.0">
                           <children>
                              <TextField fx:id="description" onAction="#insertTextField" prefHeight="26.0" prefWidth="504.0" promptText="Add todo task">
                                 <tooltip>
                                    <Tooltip text="Add a new ToDo task" />
                                 </tooltip></TextField>
                              <DatePicker fx:id="datePicker" onAction="#handleDatePicker" promptText="Pick a date">
                                 <tooltip>
                                    <Tooltip text="Due date of the Todo task" />
                                 </tooltip></DatePicker>
                           </children>
                        </HBox>
                        <HBox prefHeight="42.0" prefWidth="866.0" spacing="15.0">
                           <children>
                              <Button fx:id="buttonShowOptions" mnemonicParsing="false" onAction="#handleButtonShowOptions" text="Show Done">
                                 <tooltip>
                                    <Tooltip text="Show completed ToDo tasks" wrapText="true" />
                                 </tooltip></Button>
                              <Button fx:id="buttonDeleteAll" onAction="#handleButtonDeleteAllAction" text="Clear List">
                                 <tooltip>
                                    <Tooltip text="Delete all Todo tasks" wrapText="true" />
                                 </tooltip></Button>
                           </children>
                        </HBox>
                        <TableView fx:id="tblitems" onMouseClicked="#selectTableItem" opacity="0.8" prefHeight="560.0" prefWidth="735.0">
                          <columns>
                            <TableColumn fx:id="tblColId" minWidth="40.0" prefWidth="40.0" text="ID" visible="false" />
                            <TableColumn fx:id="tblColDesc" minWidth="200.0" onEditCommit="#handleDescriptionEdit" prefWidth="400.0" text="Description" />
                              <TableColumn fx:id="tblColDate" minWidth="95.0" prefWidth="95.0" text="Due Date" />
                              <TableColumn fx:id="tblColStat" minWidth="120.0" prefWidth="120.0" text="Status" />
                              <TableColumn fx:id="tblColStar" minWidth="30.0" prefWidth="30.0" />
                          </columns>
                        </TableView>
                        <TilePane fx:id="PaneEditItem" visible="false">
                           <children>
                              <Label fx:id="Descriptionlabel" text="Description" textFill="WHITE" />
                              <TextField fx:id="descriptionEdit" />
                              <Label fx:id="Statuslabel" text="Status" textFill="WHITE" />
                              <TextField fx:id="StatusEdit" />
                              <Label fx:id="Duedatelabel" text="Due Date" textFill="WHITE" />
                              <DatePicker fx:id="datePickerEdit" />
                           </children>
                        </TilePane>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
    </children>
</AnchorPane>
