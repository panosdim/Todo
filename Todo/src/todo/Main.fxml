<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="todo.MainController">
    <children>
      <HBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
         <children>
            <ListView fx:id="menuList" onMouseClicked="#selectMenuList" opacity="0.8" prefHeight="200.0" prefWidth="250.0" />
            <VBox prefHeight="649.0" prefWidth="865.0" spacing="15.0">
               <children>
                  <VBox prefHeight="686.0" prefWidth="866.0" spacing="15.0">
                     <children>
                        <HBox spacing="15.0">
                           <children>
                              <TextField fx:id="description" onAction="#insertTextField" prefHeight="26.0" prefWidth="504.0" promptText="Add todo task" />
                              <DatePicker fx:id="datePicker" onAction="#handleDatePicker" promptText="Pick a date" />
                           </children>
                        </HBox>
                        <HBox prefHeight="42.0" prefWidth="866.0" spacing="15.0">
                           <children>
                              <Button fx:id="buttonShowOptions" mnemonicParsing="false" onAction="#handleButtonShowOptions" text="Show Done" />
                              <Button fx:id="buttonDeleteAll" onAction="#handleButtonDeleteAllAction" text="Clear List" />
                           </children>
                        </HBox>
                        <TableView fx:id="tblitems" onMouseClicked="#selectTableItem" opacity="0.8" prefHeight="560.0" prefWidth="735.0">
                          <columns>
                            <TableColumn fx:id="tblColId" minWidth="40.0" prefWidth="40.0" text="ID" visible="false" />
                            <TableColumn fx:id="tblColDesc" minWidth="200.0" onEditCommit="#handleDescriptionEdit" prefWidth="400.0" text="Description" />
                              <TableColumn fx:id="tblColDate" minWidth="95.0" prefWidth="95.0" text="Due Date" />
                              <TableColumn fx:id="tblColStat" minWidth="120.0" prefWidth="120.0" text="Status" />
                              <TableColumn fx:id="tblColStar" minWidth="30.0" prefWidth="30.0" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
    </children>
</AnchorPane>
